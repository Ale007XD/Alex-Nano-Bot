# Alex-Nano-Bot Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Admin Telegram IDs (comma-separated)
ADMIN_IDS=123456789,987654321

# ============================================
# LLM Provider Configuration
# ============================================

# Groq API Key (primary provider)
# If empty, OPENROUTER_API_KEY will be used
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter API Key (fallback provider)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Anthropic API Key (optional - adds Claude models)
# ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI API Key (optional - adds GPT models)
# OPENAI_API_KEY=your_openai_key_here

# Multi-Provider Settings
ENABLE_MULTI_PROVIDER=true
MAX_PROVIDER_RETRIES=3
PROVIDER_HEALTH_CHECK_INTERVAL=60

# ============================================
# Model Configuration (optional - defaults shown)
# ============================================

# Default models (Groq)
DEFAULT_MODEL=llama-3.1-8b-instant
CODER_MODEL=llama-3.1-8b-instant
PLANNER_MODEL=mixtral-8x7b-32768

# Whisper model for voice transcription
WHISPER_MODEL=whisper-large-v3

# ============================================
# Voice Processing
# ============================================

MAX_VOICE_DURATION=300
ENABLE_VOICE_IN_GROUPS=true

# ============================================
# Database Configuration (optional)
# ============================================

DATABASE_URL=sqlite+aiosqlite:///data/bot.db
VECTOR_STORE_PATH=data/vector_store
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================
# Logging (optional)
# ============================================

LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# ============================================
# Application Settings
# ============================================

APP_NAME=Alex-Nano-Bot
APP_VERSION=1.1.0
